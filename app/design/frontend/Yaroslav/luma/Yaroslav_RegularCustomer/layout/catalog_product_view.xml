<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <move element="ya.roslav.regular.customer.form.container" destination="ya-roslav-regular-customer-tab"/>

        <referenceBlock name="product.info.details">
            <block class="Magento\Framework\View\Element\Text\ListText"
                   name="ya-roslav-regular-customer-tab"
                   group="detailed_info"
            >
                <arguments>
                    <argument name="sort_order" xsi:type="string">40</argument>
                    <argument translate="true" name="title" xsi:type="string">Personal Discount</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceBlock name="ya.roslav.regular.customer.form">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="regularCustomerRequest" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="regularCustomerRequestForm" xsi:type="array">
                                    <item name="config" xsi:type="array">
                                        <item name="isModal" xsi:type="boolean">false</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
