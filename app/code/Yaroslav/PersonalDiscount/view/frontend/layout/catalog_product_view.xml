<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="content">
            <block class="Yaroslav\PersonalDiscount\Block\Product\View\DiscountRequest"
                   name="ya.roslav.personal.discount.form"
                   template="Yaroslav_PersonalDiscount::catalog/product/view/discount/personal_discount_request.phtml"
                   before="product.info.details"
            >
                <arguments>
                    <argument name="cache_lifetime" xsi:type="number">84600</argument>
                    <argument name="request_submit_url"
                              path="yaroslav_personal_discount/index/request"
                              xsi:type="url"
                    />
                    <argument name="product"
                              helper="Magento\Catalog\Helper\Data::getProduct"
                              xsi:type="helper"
                    />
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
