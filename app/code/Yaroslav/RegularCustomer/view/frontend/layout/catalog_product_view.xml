<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="product.info.main">
            <container name="ya.roslav.regular.customer.form.container">
                <block class="Yaroslav\RegularCustomer\Block\Product\View\DiscountRequest"
                       name="ya.roslav.regular.customer.form"
                       template="Yaroslav_RegularCustomer::catalog/product/view/personal_discount_request/form.phtml"
                       ifconfig="ya_roslav_regular_customer/general/enabled"
                       after="-"
                >
                    <arguments>
                        <argument name="cache_lifetime" xsi:type="number">84600</argument>
                        <argument name="jsLayout" xsi:type="array">
                            <!-- Choose either `updater` or `xsi:type="helper"` -->
                            <!-- "updater" can also be used with any argument, not just a jsLayout -->
                            <updater>Yaroslav\RegularCustomer\Model\CurrentProductIdUpdater</updater>
                            <item name="components" xsi:type="array">
                                <item name="regularCustomerRequest" xsi:type="array">
                                    <item name="component" xsi:type="string">uiCollection</item>
                                    <item name="children" xsi:type="array">
                                        <item name="regularCustomerRequestForm" xsi:type="array">
                                            <item name="component" xsi:type="string">Yaroslav_RegularCustomer_form</item>
                                            <item name="displayArea" xsi:type="string">yaRoslav-regularCustomer-form</item>
                                            <item name="config" xsi:type="array">
                                                <item name="action"
                                                      xsi:type="url"
                                                      path="yaroslav_regular_customer/index/request"
                                                />
                                                <!-- Choose either `updater` or `xsi:type="helper"` -->
                                                <item name="productId" xsi:type="number">0</item>
                                                <!-- <item name="productId" xsi:type="helper" -->
                                                <!-- helper="Yaroslav\RegularCustomer\Helper\CurrentProduct::getCurrentProductId" -->
                                                <!--  /> -->
                                            </item>
                                        </item>
                                        <item name="regularCustomerRequestButton" xsi:type="array">
                                            <item name="component" xsi:type="string">Yaroslav_RegularCustomer_formOpenButton</item>
                                            <item name="displayArea" xsi:type="string">yaRoslav-regularCustomer-formOpenButton</item>
                                            <item name="config" xsi:type="array">
                                                <item name="imports" xsi:type="array">
                                                    <item name="isModal" xsi:type="string">regularCustomerRequest.regularCustomerRequestForm:isModal</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
