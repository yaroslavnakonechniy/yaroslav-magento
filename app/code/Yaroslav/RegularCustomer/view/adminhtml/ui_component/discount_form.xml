<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
>
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">discount_form.discount_form_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="spinner" xsi:type="string">discount_form</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Yaroslav\RegularCustomer\Ui\Component\DiscountRequest\Form\Button\Save"/>
            <button name="delete" class="Yaroslav\RegularCustomer\Ui\Component\DiscountRequest\Form\Button\Delete"/>
            <button name="back">
                <url path="*/*/"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
        </buttons>
        <namespace>discount_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>discount_form.discount_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="discount_form_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="ya_roslav_regular_customer/discount/save"/>
        </settings>
        <dataProvider class="Yaroslav\RegularCustomer\Ui\Component\DiscountFormDataProvider"
                      name="discount_form_data_source"
        >
            <settings>
                <requestFieldName>request_id</requestFieldName>
                <primaryFieldName>request_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="discount_form">
        <settings>
            <label/>
        </settings>
        <field name="discount_request_id" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>request_id</dataScope>
            </settings>
        </field>
        <field name="product_id" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Product ID</label>
                <dataScope>product_id</dataScope>
                <validation>
                    <!-- Product ID may be empty in case the product was deleted -->
                    <!-- <rule name="required-entry" xsi:type="boolean">true</rule> -->
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="validate-greater-than-zero" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="message" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Message</label>
                <visible>true</visible>
                <dataScope>message</dataScope>
            </settings>
        </field>
        <field name="notify" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <dataScope>notify</dataScope>
                <label translate="true">Notify Customer by Email</label>
                <visible>true</visible>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>
